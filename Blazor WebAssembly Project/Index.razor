@page "/"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<!-- Qwilr-Inspired Home Page - Enhanced and Spiced Up -->
<div class="page-fade-in" style="min-height: 100vh; background: #f8fafc;">
    <!-- Top Bar -->
    <div class="d-flex justify-content-end align-items-center px-4 py-4" style="max-width: 1600px; margin: 0 auto;">
        <div class="d-flex align-items-center" style="gap: 0.5rem;">
            <a class="btn btn-white border-0 fw-semibold d-inline-flex align-items-center" style="color: #222; font-size: 1.1rem;" @onclick='() => NavigationManager.NavigateTo("/register")'>
                <i class="bi bi-person-plus me-1"></i> Register
            </a>
            <span style="width: 1px; height: 28px; background: #e0e0e0; margin: 0 0.5rem;"></span>
            <a class="btn btn-white border-0 fw-semibold d-inline-flex align-items-center" style="color: #222; font-size: 1.1rem;" @onclick='() => NavigationManager.NavigateTo("/contact")'>
                <i class="bi bi-envelope me-1"></i> Contact
            </a>
            <span style="width: 1px; height: 28px; background: #e0e0e0; margin: 0 0.5rem;"></span>
            <a class="btn btn-white border-0 fw-semibold d-inline-flex align-items-center" style="color: #222; font-size: 1.1rem;" @onclick='() => NavigationManager.NavigateTo("/guide")'>
                <i class="bi bi-journal-text me-1"></i> Guide
            </a>
            <span style="width: 1px; height: 28px; background: #e0e0e0; margin: 0 0.5rem;"></span>
            <a class="btn btn-danger fw-semibold d-inline-flex align-items-center px-4" style="color: #fff; font-size: 1.1rem;" @onclick='() => FadeNavigate("/login")'>
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid" style="max-width: 1600px;">
        <div class="row align-items-center justify-content-center" style="min-height: 75vh;">
            <!-- Left: Illustration or Logo on Huge Red Circle -->
            <div class="col-lg-6 d-flex justify-content-center align-items-center position-relative" style="min-height: 600px;">
                <div style="position: relative; width: 100%; height: 600px; display: flex; align-items: center; justify-content: center;">
                    <!-- Massive Red Circle - more cornered and downward -->
                    <div style="background: #e53935; border-radius: 50%; width: 900px; height: 900px; position: absolute; left: 70%; top: 70%; transform: translate(-50%, -50%); z-index: 0; opacity: 0.22;"></div>
                    <!-- Logo with transparent background, positioned on the circle -->
                    <img src="images/logo_png.png" alt="Logo" width="260" height="260" style="position: absolute; left: 70%; top: 70%; transform: translate(-50%, -50%); z-index: 1;" />
                </div>
            </div>
            <!-- Right: Headline and CTA -->
            <div class="col-lg-6 py-5 d-flex flex-column align-items-center align-items-lg-start justify-content-center">
                <h1 class="display-2 fw-bold mb-3 text-center text-lg-start" style="line-height: 1.1; letter-spacing: -2px;">
                    <span style="font-family: inherit;">מחסן הנשיא</span> <br />Welcome to
                </h1>
                <h2 class="fw-semibold mb-3 text-center text-lg-start" style="color: #444; font-size: 2rem;">Documents that get results.</h2>
                <p class="lead mb-4 text-center text-lg-start" style="max-width: 520px; color: #666;">
                    Manage your equipment easily, quickly, and beautifully.<br />
                    Your one-stop solution for equipment management.
                </p>
                <button class="btn btn-danger btn-lg px-5 py-3 fw-semibold shadow d-inline-flex align-items-center mt-2" style="font-size: 1.2rem;" @onclick='() => NavigationManager.NavigateTo("/register")'>
                    <i class="bi bi-arrow-right-circle me-2"></i> Get Started
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private async Task FadeNavigate(string url)
    {
        await JSRuntime.InvokeVoidAsync("navigateWithFade", url);
    }
}
