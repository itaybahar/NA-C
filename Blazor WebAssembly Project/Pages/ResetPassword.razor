@page "/reset-password"
@inject NavigationManager Navigation

<style>
    .reset-container {
        width: 350px;
        margin: 80px auto;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        text-align: center;
        direction: rtl;
    }

        .reset-container img.logo {
            width: 100px;
            margin-bottom: 15px;
        }

    h2 {
        color: #a30000;
        font-size: 22px;
        margin-bottom: 15px;
    }

    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .btn-reset {
        width: 100%;
        background-color: #a30000;
        color: white;
        border: none;
        padding: 10px;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
    }

        .btn-reset:hover {
            background-color: #850000;
        }

    .footer {
        text-align: center;
        margin-top: 30px;
        font-size: 0.8em;
        color: #888;
    }
</style>

<div class="reset-container">
    <img class="logo" src="/unnamed.jpg" alt="לוגו שבט הנשיא" />
    <h2>איפוס סיסמה</h2>

    <input type="password" placeholder="סיסמה חדשה" @bind="newPassword" />
    <input type="password" placeholder="אימות סיסמה" @bind="confirmPassword" />

    <button class="btn-reset" @onclick="HandleResetPassword">אפס סיסמה</button>

    @if (!string.IsNullOrEmpty(message))
    {
        <p style="color: @(isSuccess ? "green" : "red")">@message</p>
    }

    <div class="footer">
        © 2025 מחסן שבט הנשיא | כל הזכויות שמורות
    </div>
</div>

@code {
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string message = string.Empty;
    private bool isSuccess = false;

    private async Task HandleResetPassword()
    {
        if (string.IsNullOrWhiteSpace(newPassword) || string.IsNullOrWhiteSpace(confirmPassword))
        {
            message = "אנא מלא את כל השדות.";
            isSuccess = false;
            return;
        }

        if (newPassword != confirmPassword)
        {
            message = "הסיסמאות אינן תואמות.";
            isSuccess = false;
            return;
        }

        // כאן תוכל לקרוא ל-API או AuthService ולבצע עדכון
        message = "הסיסמה שונתה בהצלחה!";
        isSuccess = true;

        await Task.Delay(2000);
        Navigation.NavigateTo("/login");
    }
}
