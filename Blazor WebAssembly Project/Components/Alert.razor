@namespace Blazor_WebAssembly_Project.Components

<div class="@($"alert alert-{Type} {CssClass}")">
    @if (!string.IsNullOrEmpty(Title))
    {
        <h4 class="alert-heading">@Title</h4>
    }

    <div class="alert-content">
        @ChildContent
    </div>

    @if (Dismissible)
    {
        <button type="button" class="btn-close" @onclick="OnDismiss"></button>
    }
</div>

@code {
    [Parameter]
    public string Type { get; set; } = "info";

    [Parameter]
    public string? Title { get; set; } // Made nullable to resolve CS8618

    [Parameter]
    public string CssClass { get; set; } = "";

    [Parameter]
    public bool Dismissible { get; set; } = false;

    [Parameter]
    public EventCallback<MouseEventArgs> OnDismiss { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; } // Made nullable to resolve CS8618
}
